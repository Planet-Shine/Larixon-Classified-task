

$bodyColor = #ececec
$cardColor = #ffffff


body
  margin 0
  padding 0
  width 100%
  height 100%
  font-family Arial
  background $bodyColor

.central-col-box
  margin 30px auto 30px auto
  padding 0 15px
  max-width 830px
  min-width 530px

.central-col
  padding 15px
  width auto
  background $cardColor
  border-radius 5px
  border none
  box-shadow 0 0 10px rgba(0,0,0,0.5)

.top-right
  float right

.current-data-type-list
  padding-top 20px

.typified-current-data-type-form
  padding-top 20px

.form__field
  position relative
  height : 70px


