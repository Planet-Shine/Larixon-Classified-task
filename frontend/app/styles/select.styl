
selectHeight = 32px

.select
  position relative
  vertical-align top
  display inline-block
  cursor pointer
  user-select none
  box-sizing border-box
  outline 0
  white-space nowrap
  height selectHeight
  border-radius 10px
  background #98c5f3

.select__caption-icon
  display inline-block;
  background center center no-repeat;
  background-size 100% 100%;
  white-space nowrap;
  vertical-align top;
  &:before
    position absolute
    top 0
    right 5px
    content '▲'

.select__caption
  overflow hidden
  padding 0 30px 0 20px
  user-select none
  white-space nowrap;
  text-overflow ellipsis;
  max-width 100%
  font-size 16px
  height selectHeight
  line-height selectHeight

.select__options
  position absolute
  display block
  width 100%
  top selectHeight
  padding 0 10px
  box-sizing border-box
  z-index 1999999

.select__item:last-child
  border-radius : 0 0 10px 10px

.select__item
  width auto
  background #dfedff
  padding 10px
  &:hover
    background #ffd8a6

.select_closed
  .select__options
    display none
  .select__caption-icon:before
    content '▼'

.select__item_selected
  background #dec7ab

.select_shown-default
  .select__selected
    display none

.select_shown-selected
  .select__selected-default
    display none

.select_medium
  min-width 150px

